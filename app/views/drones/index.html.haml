%h1= t('.title')
%p= link_to t('.new_drone'), new_drone_path

%table
  %thead
    %tr
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for drone in @drones
      %tr{ :class => cycle(:odd, :even) }
        %td.action= link_to t('show'), drone
        %td.action= link_to t('edit'), edit_drone_path(drone)
        %td.action= link_to t('destroy'), drone, :confirm => t('are_you_sure'), :method => :delete
