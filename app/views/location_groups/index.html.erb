<h1>Listing location_groups</h1>
<%= link_to 'Create New location_group', new_location_group_path %><br/>
<table>
  <tr>
    <th>Name</th>
    <th>X-Coordinate</th>
    <th>Y-Coordinate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @location_groups.each do |location_group| %>
      <tr>
        <td><%= location_group.name %></td>
        <td><%= location_group.xcoordinate %></td>
        <td><%= location_group.ycoordinate %></td>
        <td><%= link_to 'Edit', edit_location_group_path(location_group) %></td>
        <td><%= link_to 'Destroy', location_group, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
  <% end %>
</table>

<br />

