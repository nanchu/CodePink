<h1>Listing Locations</h1>

<table>
  <tr>
    <th>City</th>
    <th>Province</th>
    <th>Information</th>
    <th>Location Group</th>
    <th>X-Coordinate</th>
    <th>Y-Coordinate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @locations.each do |location| %>
      <tr>
        <td><%= location.city %></td>
        <td><%= location.province %></td>
        <td><%= location.information %></td>
        <td><%= location.location_group.name %></td>
        <td><%= location.location_group.xcoordinate %></td>
        <td><%= location.location_group.ycoordinate %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
  <% end %>
</table>

<br />

